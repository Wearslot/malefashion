<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <checkout-form>
                <form action="{{store.website}}/checkout" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <h6 class="coupon__code"><span class="icon_tag_alt"></span> Have a coupon? <a href="/cart">Click
                                    here</a> to enter your code</h6>
                            <h6 class="checkout__title">Billing Details</h6>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Fist Name<span>*</span></p>
                                        <input type="text" name="firstname">
                                        {{#if errors.firstname}}
                                        <span>{{errors.firstname}}</span>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Last Name<span>*</span></p>
                                        <input type="text" name="lastname">
                                        {{#if errors.lastname}}
                                        <span>{{errors.lastname}}</span>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Country<span>*</span></p>
                                {{{country_select_field 'id="country" class="form-control"'
                                selected=cart.shipping_address.country}}}
                                {{#if errors.country}}
                                <span>{{errors.country}}</span>
                                {{/if}}
                            </div>
                            <div class="checkout__input">
                                <p>Address<span>*</span></p>
                                <input type="text" placeholder="Street Address" class="checkout__input__add"
                                    name="address_line_1">
                                {{#if errors.address_line_1}}
                                <span>Street Address is required</span>
                                {{/if}}
                                <input type="text" placeholder="Apartment, suite, unite ect (optinal)"
                                    name="address_line_2">
                            </div>
                            <div class="checkout__input">
                                <p>Town/City<span>*</span></p>
                                <input type="text" name="city">
                                {{#if errors.city}}
                                <span>{{errors.city}}</span>
                                {{/if}}
                            </div>
                            <div class="checkout__input">
                                <p>State<span>*</span></p>
                                {{{state_select_field 'id="state" class="form-control address-field state-select"'
                                selected=cart.shipping_address.state}}}
                                {{#if errors.state}}
                                <span>{{errors.state}}</span>
                                {{/if}}
                            </div>
                            <div class="checkout__input">
                                <p>Postcode / ZIP<span>*</span></p>
                                <input type="text" name="postcode">
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Phone<span>*</span></p>
                                        <input type="text" name="phone">
                                        {{#if errors.phone}}
                                        <span>{{errors.phone}}</span>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Email<span>*</span></p>
                                        <input type="text" name="email">
                                        {{#if errors.email}}
                                        <span>{{errors.email}}</span>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="acc">
                                    Create an account?
                                    <input type="checkbox" name="create_account" id="acc">
                                    <span class="checkmark"></span>
                                </label>
                                <p>Create an account by entering the information below. If you are a returning customer
                                    please login at the top of the page</p>
                            </div>
                            <div class="checkout__input">
                                <p>Account Password<span>*</span></p>
                                <input type="text" name="password">
                                {{#if errors.password}}
                                <span>{{errors.password}}</span>
                                {{/if}}
                            </div>
                            <div class="checkout__input">
                                <p>Order notes<span class="text-muted">(optional)</span></p>
                                <input type="text" name="note"
                                    placeholder="Notes about your order, e.g. special notes for delivery.">
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4 class="order__title">Your order</h4>
                                <div class="checkout__order__products">Product <span>Total</span></div>
                                <ul class="checkout__total__products">
                                    {{#iterate cart.items as="item"}}
                                    <li>{{add item.index 1}}. {{item.title}} <span>{{{currency.symbol}}}
                                            {{item.sale_price}}</span></li>
                                    {{/iterate}}
                                </ul>
                                <ul class="checkout__total__all">
                                    <li>Subtotal <span>{{{ money cart.subtotal_price}}}</span></li>
                                    <li>Total <span>{{{ money cart.total_price}}}</span></li>
                                </ul>
                                {{#iterate payment_methods}}
                                <div class="checkout__input__checkbox">
                                    <label for="payment">
                                        {{current.name}}
                                        <input type="radio" name="payment_method" value="{{current.id}}">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                {{/iterate}}
                                <button type="submit" class="site-btn">PLACE ORDER</button>
                            </div>
                        </div>
                    </div>
                </form>
            </checkout-form>
        </div>
    </div>
</section>


<script type="text/javascript" src="{{asset_url}}/js/checkout.js"></script>