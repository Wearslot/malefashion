{{#if section.settings.show}}
<section class="banner spad">
    <div class="container">
        <div class="row">
            {{#iterate collections as="collection" limit=4}}
            <div class="col-lg-3">
                <div class="banner__item">
                    <div class="banner__item__pic">
                        <img src="{{ collection.image }}" alt="">
                    </div>
                    <div class="banner__item__text">
                        <div>
                            <h2>{{ collection.name }}</h2>
                            <a href="/collection/{{ collection.slug }}">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/iterate}}
        </div>
        {{#ifCond collections.data.length '>' 4}}
        <div class="col-lg-12 my-5">
            <div class="text-center">
                <a class="text-dark" style="text-decoration: underline;" href="/collections">
                    View all collections
                </a>
            </div>
        </div>
        {{/ifCond}}
    </div>
</section>
{{/if}}