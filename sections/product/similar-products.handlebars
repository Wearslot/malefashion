{{#if similar_products}}
<section class="related spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="related-title">{{section.settings.title}}</h3>
            </div>
        </div>
        <div class="row">
            {{#iterate similar_products as="product" limit="4"}}
            <div class="col-lg-3 col-md-6 col-sm-6 col-sm-6">
                <div class="product__item">
                    <a href="/product/{{product.slug}}">
                        <div class="product__item__pic set-bg" data-setbg="{{product.image.main}}">
                            {{#ifCond product.discount ">" 0}}
                            <span class="label">Sale</span>
                            {{/ifCond}}
                        </div>
                    </a>
                    <div class="product__item__text">
                        <h6>{{product.name}}</h6>
                        <a href="/product/{{product.slug}}" class="add-cart">{{#if product.has_variations}} Select
                            Options {{else}} + Add To Cart {{/if}}</a>
                        <div class="rating" data-rate="{{ product.rating }}"></div>
                        <h5>{{{ product_price product }}}</h5>
                    </div>
                </div>
            </div>
            {{/iterate}}
        </div>
    </div>
</section>
{{/if}}