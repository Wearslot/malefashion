{{#styles}}
#reviews-list {
  max-width: 500px;
  margin-top: 1rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.review {
  border: 1px solid #ddd;
  padding: 1rem;
  border-radius: 8px;
  background: #fafafa;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.reviewer-name {
  font-weight: bold;
  color: #333;
}

.review-stars {
  color: gold;
  font-size: 1.2rem;
}

.review-comment {
  margin: 0;
  color: #555;
}
{{/styles}}
<section class="related spad">
    <div class="container">
        <h2 class="taojaa-Reviews-title">Reviews</h2>
        {{#ifCond product.reviews.length '>' 0}}
        <div id="reviews-list">
            {{#iterate product.reviews as="review"}}
            <div class="review">
                <div class="review-header">
                    <span class="reviewer-name">{{review.fullname}}</span>
                    <div class="review-stars" data-rating="{{review.rate}}"></div>
                </div>
                <p class="review-comment">{{review.comment}}</p>
            </div>
            {{/iterate}}
        </div>
        {{else}}
        <p class="taojaa-noreviews">There are no reviews yet.</p>
        {{/ifCond}}
    </div>
</section>

{{#script}}
document.querySelectorAll('.review-stars').forEach(starContainer => {
  const rating = parseInt(starContainer.getAttribute('data-rating'));
  starContainer.innerHTML = '★'.repeat(rating) + '☆'.repeat(5 - rating);
});
{{/script}}