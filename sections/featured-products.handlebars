{{#if section.settings.show}}
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*" style="font-size: {{section.settings.heading_size}}px;">
                        {{section.settings.heading}}</li>
                </ul>
            </div>
        </div>

        {{#ifCond best_selling.data.length '>' 0}}
        <div class="row product__filter">
            {{#iterate best_selling as="product" limit="8"}}
            <div
                class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix {{#iterate product.collections as='pcol'}} {{pcol.slug}} {{/iterate}}">
                <div class="product__item">
                    <a href="/product/{{product.slug}}">
                        <div class="product__item__pic set-bg" data-product-id="{{product.id}}"
                            data-setbg="{{ product.image.main }}">
                            {{#ifCond product.discount ">" 0}}
                            <span class="label">Sale</span>
                            {{/ifCond}}
                        </div>
                    </a>
                    <div class="product__item__text">
                        <h6>{{ product.name }}</h6>
                        <a href="/product/{{product.slug}}" class="add-cart">{{#if product.has_variations}} Select
                            Options {{else}} + Add To Cart {{/if}}</a>
                        <div class="rating" data-rate="{{ product.rating }}">
                        </div>
                        <h5>{{{ product_price product }}}</h5>
                    </div>
                </div>
            </div>
            {{/iterate}}
        </div>
        {{/ifCond}}

        {{#unless best_selling.data.length}}
        {{#ifCond featured_products.data.length '>' 0}}
        <div class="row product__filter">
            {{#iterate featured_products as="product" limit="8"}}
